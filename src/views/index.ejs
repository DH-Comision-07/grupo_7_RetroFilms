<!DOCTYPE html>
<html lang="en">

<head>
  <%-include('./partials/head')%>
  <link rel="preconnect" href="https://fonts.googleapis.com"/>
  <link rel="stylesheet" href="/css/styles.css">  
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
  <title>RetroFilms</title> 

</head>

<body>
  <a href="#" class="back-to-top">
    <i class="fas fa-arrow-up"></i>
  </a>

  <header>
        <%-include('./partials/header')%>
  </header>

  <main class="bodyPrincipal">
      <div class="carrusel">
        <section>
          <%carrousellMovies.forEach(function (movie){%>
            <a href="/products/detalleProducto/<%= movie.id %>">
              <img src="img/Home/<%=movie.poster%>" alt="" >
            </a>
          <%})%>
        </section>
      </div>

      <div class="tabsContenido">
          <div>Últimas</div>
          <div>Estrenos</div>
          <div>Más Vistas</div>
      </div>

      <div class="contenidoMain">

        <div class="cuadriculaPeliculas">
          <%movieGridMovies.forEach(function (movie){%>
            <div class="pelicula">
              <a href="/products/detalleProducto/<%= movie.id %>">
                <img src="img/DetalleProducto/<%=movie.poster%>" alt="">
              </a>
            </div>
          <%})%>
        </div>
  
        <div class="topEstrenos">
          <%topMovies.forEach(function (movie,index){%>
            <div class="peliculaEstreno"> Top número <%=index+1%> 
              <a href="/products/detalleProducto/<%= movie.id %>">
                <img src="img/DetalleProducto/<%=movie.poster%>" alt="" >
              </a>
            </div>
          <%})%>
        </div>

      </div>

  </main>

  <footer>
    <%-include('./partials/footer')%>
  </footer>

</body>

</html>